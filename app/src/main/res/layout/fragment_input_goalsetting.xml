<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_input_detail"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:text="Input Details about My Goal Setting"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/txt_how_tobe"
    android:layout_width="wrap_content"
    android:text="How to Be...?"
    android:layout_marginTop="10dp"
    android:layout_below="@id/txt_input_detail"
    android:textColor="#e01b16"
    android:textSize="20dp"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_tobe"
        android:layout_width="match_parent"
        android:layout_below="@id/txt_how_tobe"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/ic_background_round_nocolor"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/txt_how_todo"
        android:layout_width="wrap_content"
        android:text="How To Do...?"
        android:layout_below="@id/edit_tobe"
        android:textColor="#e01b16"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_todo"
        android:layout_width="match_parent"
        android:layout_below="@id/txt_how_todo"
        android:background="@drawable/ic_background_round_nocolor"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="80dp" />
    <Button
        android:layout_width="200dp"
        android:background="@drawable/ic_background_round"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_below="@id/edit_todo"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp" />
</RelativeLayout>