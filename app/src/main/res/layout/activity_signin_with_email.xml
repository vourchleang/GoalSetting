<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#4fc3ce"
        android:gravity="center"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/img_goal"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="My Goal Setting..."
            android:textColor="#20324e"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="300dp"
            android:text="Enter Your Email : "
            android:background="@drawable/ic_background_round_nocolor"
            android:layout_height="35dp" />
        <EditText
            android:id="@+id/edit_password"
            android:layout_below="@id/edit_email"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:background="@drawable/ic_background_round_nocolor"
            android:text="Enter Your PassWord : "
            android:layout_height="35dp" />
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_below="@id/edit_password"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@id/btnsignin1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Back"
            android:layout_below="@id/ic_back"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnsignin1"
            android:layout_width="180dp"
            android:text="Signin"
            android:background="@drawable/ic_background_round"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/edit_password"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>